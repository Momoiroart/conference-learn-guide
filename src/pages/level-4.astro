<style>
  .hero { padding: 80px 0 40px; text-align: center; }
  .hero-badge { display: inline-block; padding: 8px 16px; background: rgba(74,240,232,0.1); border: 1px solid rgba(74,240,232,0.3); border-radius: 100px; color: var(--accent-secondary); font-size: 12px; margin-bottom: 20px; }
  .hero h1 { font-family: 'Space Grotesk', sans-serif; font-size: clamp(32px, 6vw, 56px); font-weight: 700; margin-bottom: 16px; }
  .gradient { background: linear-gradient(135deg, var(--accent), var(--accent-secondary)); -webkit-background-clip: text; -webkit-text-fill-color: transparent; }
  .lead { font-size: 18px; color: var(--text-secondary); max-width: 600px; margin: 0 auto; }

  .content { padding: 40px 0 80px; }
  .lesson-card { background: var(--bg-card); border: 1px solid var(--border); border-radius: 20px; padding: 32px; margin-bottom: 24px; }
  .lesson-card h2 { font-family: 'Space Grotesk', sans-serif; font-size: 22px; margin-bottom: 16px; }
  .lesson-card p { color: var(--text-secondary); line-height: 1.8; }

  .tips { display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 16px; margin-top: 20px; }
  .tip { display: flex; gap: 12px; align-items: start; }
  .tip-icon { font-size: 24px; }
  .tip h4 { font-size: 14px; margin-bottom: 4px; }
  .tip p { font-size: 13px; }

  .ideas { list-style: none; margin-top: 16px; }
  .ideas li { padding: 10px 0; border-bottom: 1px solid var(--border); color: var(--text-secondary); }
  .ideas li::before { content: "âœ "; color: var(--accent); }

  .templates { display: grid; grid-template-columns: repeat(auto-fit, minmax(180px, 1fr)); gap: 12px; margin-top: 16px; }
  .template { background: var(--bg-secondary); border-radius: 12px; padding: 16px; }
  .template h4 { font-size: 14px; margin-bottom: 4px; }
  .template p { font-size: 12px; }
  .note { font-size: 13px; color: var(--text-secondary); margin-top: 16px; }
  .note code { background: var(--bg-primary); padding: 4px 8px; border-radius: 4px; color: var(--accent); }

  .celebration { background: linear-gradient(135deg, rgba(255,107,157,0.15), rgba(74,240,232,0.15)); border-color: var(--accent); text-align: center; }
  .celebration ul { display: inline-block; text-align: left; list-style: none; margin: 16px 0; }
  .celebration li { padding: 8px 0; color: var(--text-secondary); }

  .navigation { display: flex; justify-content: space-between; gap: 16px; margin-top: 40px; }
</style>
