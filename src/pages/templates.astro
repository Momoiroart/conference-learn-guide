<style>
  .hero { padding: 100px 0 60px; text-align: center; }
  .lead { font-size: 18px; color: var(--text-secondary); max-width: 580px; margin: 0 auto; }
  .content { padding: 40px 0 80px; }

  .templates-grid { display: grid; grid-template-columns: repeat(auto-fit, minmax(320px, 1fr)); gap: 24px; margin-bottom: 60px; }

  .template-card { background: var(--bg-card); border: 1px solid var(--border); border-radius: 24px; overflow: hidden; transition: transform 0.3s, border-color 0.3s; position: relative; }
  .template-card:hover { transform: translateY(-6px); border-color: rgba(255,107,157,0.3); }
  .template-card.featured { border-color: rgba(168,85,247,0.4); }

  .featured-badge { position: absolute; top: 16px; right: 16px; background: linear-gradient(135deg, var(--accent), var(--violet)); color: #fff; font-size: 11px; font-weight: 700; padding: 4px 12px; border-radius: 100px; z-index: 1; }

  .template-preview { height: 160px; display: flex; align-items: center; justify-content: center; position: relative; }
  .preview-basic  { background: linear-gradient(135deg, rgba(255,107,157,0.15), rgba(74,240,232,0.1)); }
  .preview-ai     { background: linear-gradient(135deg, rgba(168,85,247,0.2), rgba(255,107,157,0.1)); }
  .preview-game   { background: linear-gradient(135deg, rgba(74,240,232,0.15), rgba(168,85,247,0.1)); }
  .preview-chat   { background: linear-gradient(135deg, rgba(74,240,232,0.1), rgba(255,107,157,0.15)); }
  .preview-icon { font-size: 56px; }
  .preview-dots { position: absolute; bottom: 12px; left: 16px; display: flex; gap: 6px; }
  .preview-dots span { width: 8px; height: 8px; border-radius: 50%; background: rgba(255,255,255,0.2); }

  .template-body { padding: 24px; }
  .template-tags { display: flex; flex-wrap: wrap; gap: 6px; margin-bottom: 12px; }
  .tag { font-size: 11px; padding: 3px 10px; border-radius: 100px; border: 1px solid var(--border); color: var(--text-secondary); }
  .tag-html { border-color: rgba(74,240,232,0.3); color: var(--accent-secondary); }
  .tag-ai   { border-color: rgba(168,85,247,0.3); color: #c084fc; }
  .tag-game { border-color: rgba(255,107,157,0.3); color: var(--accent); }

  .template-body h3 { font-family: 'Space Grotesk', sans-serif; font-size: 20px; margin-bottom: 10px; }
  .template-body p { color: var(--text-secondary); font-size: 14px; line-height: 1.7; margin-bottom: 16px; }

  .feature-list { list-style: none; margin-bottom: 20px; display: grid; gap: 6px; }
  .feature-list li { font-size: 13px; color: var(--text-secondary); }

  .template-actions { display: flex; gap: 10px; flex-wrap: wrap; }

  /* How-to section */
  .how-to { margin: 48px 0; text-align: center; }
  .how-to h2 { font-family: 'Space Grotesk', sans-serif; font-size: 26px; margin-bottom: 32px; }
  .steps-row { display: flex; align-items: center; flex-wrap: wrap; gap: 12px; justify-content: center; }
  .how-step { background: var(--bg-card); border: 1px solid var(--border); border-radius: 16px; padding: 20px; width: 180px; text-align: center; }
  .how-num { width: 36px; height: 36px; background: linear-gradient(135deg, var(--accent), var(--violet)); border-radius: 50%; display: inline-flex; align-items: center; justify-content: center; font-family: 'Space Grotesk', sans-serif; font-weight: 700; font-size: 16px; margin-bottom: 12px; }
  .how-step h4 { font-size: 14px; margin-bottom: 6px; }
  .how-step p { font-size: 12px; color: var(--text-secondary); }
  .how-arrow { font-size: 20px; color: var(--text-secondary); }

  /* CTA */
  .cta-card { background: linear-gradient(135deg, rgba(255,107,157,0.08), rgba(168,85,247,0.08)); border: 1px solid rgba(255,107,157,0.15); border-radius: 24px; padding: 48px 32px; text-align: center; }
  .cta-card h2 { font-family: 'Space Grotesk', sans-serif; font-size: 26px; margin-bottom: 12px; }
  .cta-card p { color: var(--text-secondary); }

  @media (max-width: 600px) {
    .how-arrow { display: none; }
    .how-step { width: 100%; }
  }
</style>
